{% doc %}
  @prompt
    Add a simple header on top that says the following" ðŸšš Now Delivering Across the Greater Toronto Area (GTA) | Delivery Regions" and Delivery Regions should be a link that goes to a deliveries page, full-width header.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-delivery-header-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 20px;
    text-align: center;
  }

  .ai-delivery-header__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-delivery-header__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: {{ block.settings.link_underline }};
    transition: color 0.2s ease;
  }

  .ai-delivery-header__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-delivery-header__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-delivery-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <p class="ai-delivery-header__content-{{ ai_gen_id }}">
    {{ block.settings.announcement_text }}
    {% if block.settings.link_url != blank %}
      <a href="{{ block.settings.link_url }}" class="ai-delivery-header__link-{{ ai_gen_id }}">
        {{ block.settings.link_text }}
      </a>
    {% else %}
      {{ block.settings.link_text }}
    {% endif %}
  </p>
</div>

{% schema %}
{
  "name": "Delivery announcement",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "ðŸšš Now Delivering Across the Greater Toronto Area (GTA) |"
    },
    {
      "type": "inline_richtext",
      "id": "link_text",
      "label": "Link text",
      "default": "Delivery Regions"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#c15045"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "link_underline",
      "label": "Link underline",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "underline",
          "label": "Underline"
        }
      ],
      "default": "underline"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Desktop font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "label": "Mobile font size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 8,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Delivery announcement"
    }
  ]
}
{% endschema %}