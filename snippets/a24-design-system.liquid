{% comment %}
  A24 Design System
  
  Applies A24's visual design language to the A24 PDP template:
  - Colors: Light grey background (#f1f1f1), black text
  - Typography: NB International (fallback to system sans)
  - Spacing: Based on --space unit (0.625rem)
  - Minimal aesthetic with tight letter-spacing
{% endcomment %}

{% stylesheet %}
  /* ============================================
     A24 Design System Variables
     ============================================ */
  
  .product-information-a24 {
    /* A24 Color Palette */
    --a24-color-bg: #f1f1f1;
    --a24-color-text: #000000;
    --a24-color-text-hover: #787878;
    --a24-color-divider: #a8a8a8;
    
    /* A24 Spacing System */
    --a24-space: 0.625rem; /* 10px base */
    --a24-space-2: calc(var(--a24-space) * 2); /* 20px */
    --a24-space-3: calc(var(--a24-space) * 3); /* 30px */
    --a24-space-4: calc(var(--a24-space) * 4); /* 40px */
    --a24-space-6: calc(var(--a24-space) * 6); /* 60px */
    --a24-space-8: calc(var(--a24-space) * 8); /* 80px */
    
    /* A24 Typography Scale */
    --a24-font-family: 'NB International Web', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    --a24-font-mono: 'NB International Mono Web', 'Courier New', Courier, Monaco, monospace;
    
    /* A24 Type Sizes */
    --a24-h1-size: 5.25rem; /* 84px */
    --a24-h2-size: 2.625rem; /* 42px */
    --a24-h3-size: 2.25rem; /* 36px */
    --a24-h4-size: 1.125rem; /* 18px */
    --a24-body-size: 1rem; /* 16px */
    --a24-small-size: 0.875rem; /* 14px */
    --a24-tiny-size: 0.6875rem; /* 11px */
    
    /* A24 Letter Spacing */
    --a24-ls-tight: -0.055em;
    --a24-ls-medium: -0.0375em;
    --a24-ls-normal: -0.01em;
    --a24-ls-wide: 0.02em;
    --a24-ls-wider: 0.04em;
    
    /* A24 Line Heights */
    --a24-lh-tight: 0.87;
    --a24-lh-snug: 1;
    --a24-lh-normal: 1.19;
    
    /* Override Ritual colors with A24 palette */
    background-color: var(--a24-color-bg);
    color: var(--a24-color-text);
  }

  /* ============================================
     A24 Typography Styles
     ============================================ */
  
  .product-information-a24,
  .product-information-a24 * {
    font-family: var(--a24-font-family);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  /* Product Title (H1) */
  .product-information-a24__left h1,
  .product-information-a24__left .text--h1 {
    font-size: var(--a24-h2-size); /* Use H2 size for product titles */
    font-weight: 700;
    letter-spacing: var(--a24-ls-medium);
    line-height: var(--a24-lh-snug);
    margin: 0 0 var(--a24-space-2) 0;
    color: var(--a24-color-text);
  }

  /* Product Subtitle / Eyebrow */
  .product-information-a24__left .eyebrow,
  .product-information-a24__left h6 {
    font-size: var(--a24-tiny-size);
    font-weight: 600;
    letter-spacing: var(--a24-ls-wider);
    line-height: var(--a24-lh-snug);
    text-transform: uppercase;
    color: var(--a24-color-text);
    margin-bottom: var(--a24-space);
  }

  /* Price */
  .product-information-a24__left .price,
  .product-information-a24 .price {
    font-size: var(--a24-h4-size);
    font-weight: 700;
    letter-spacing: var(--a24-ls-normal);
    line-height: var(--a24-lh-snug);
    color: var(--a24-color-text);
  }

  /* Body Text / Description */
  .product-information-a24__left p,
  .product-information-a24__left .rte {
    font-size: var(--a24-body-size);
    font-weight: 400;
    letter-spacing: var(--a24-ls-normal);
    line-height: var(--a24-lh-normal);
    color: var(--a24-color-text);
    margin-bottom: 1.2em;
  }

  .product-information-a24__left p:last-child {
    margin-bottom: 0;
  }

  /* Variant Options */
  .product-information-a24 .variant-picker label,
  .product-information-a24 .variant-picker .variant-option {
    font-size: var(--a24-small-size);
    font-weight: 400;
    letter-spacing: var(--a24-ls-wide);
    text-transform: uppercase;
    color: var(--a24-color-text);
  }

  /* ============================================
     A24 Spacing & Layout Refinements
     ============================================ */
  
  /* Tighter spacing between elements */
  .product-information-a24__left .group-block {
    gap: var(--a24-space-2);
  }

  .product-information-a24__left .variant-picker {
    margin-top: var(--a24-space-3);
    margin-bottom: var(--a24-space-3);
  }

  .product-information-a24__left ._divider {
    margin: var(--a24-space-4) 0;
    opacity: 0.3;
  }

  /* ============================================
     A24 Buttons & Interactive Elements
     ============================================ */
  
  .product-information-a24 button,
  .product-information-a24 .button {
    font-family: var(--a24-font-family);
    font-size: var(--a24-small-size);
    font-weight: 400;
    letter-spacing: var(--a24-ls-wide);
    text-transform: uppercase;
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
    border: 1px solid var(--a24-color-text);
    border-radius: 0;
    padding: var(--a24-space-2) var(--a24-space-3);
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .product-information-a24 button:hover,
  .product-information-a24 .button:hover {
    background-color: var(--a24-color-text-hover);
    border-color: var(--a24-color-text-hover);
    color: var(--a24-color-bg);
  }

  /* Secondary buttons */
  .product-information-a24 .button--secondary {
    background-color: transparent;
    color: var(--a24-color-text);
    border: 1px solid var(--a24-color-divider);
  }

  .product-information-a24 .button--secondary:hover {
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
    border-color: var(--a24-color-text);
  }

  /* ============================================
     A24 Scrollbar Styling
     ============================================ */
  
  .product-information-a24__left {
    scrollbar-color: var(--a24-color-divider) var(--a24-color-bg);
    scrollbar-width: thin;
  }

  .product-information-a24__left::-webkit-scrollbar {
    width: 9px;
  }

  .product-information-a24__left::-webkit-scrollbar-track {
    background: var(--a24-color-bg);
  }

  .product-information-a24__left::-webkit-scrollbar-thumb {
    background: var(--a24-color-divider);
    border: 2px solid var(--a24-color-bg);
    border-radius: 9px;
  }

  .product-information-a24__left::-webkit-scrollbar-thumb:hover {
    background: #8f8f8f;
  }

  /* ============================================
     A24 Purchase Bar Styling
     ============================================ */
  
  .product-information-a24__purchase-bar {
    background-color: var(--a24-color-bg);
    border: 1px solid var(--a24-color-divider);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  /* ============================================
     A24 Responsive Typography Scaling
     ============================================ */
  
  /* Mobile: Smaller type */
  @media screen and (max-width: 666px) {
    .product-information-a24 {
      --a24-h1-size: 4rem;
      --a24-h2-size: 2rem;
      --a24-h3-size: 1.75rem;
    }

    .product-information-a24__left h1 {
      font-size: var(--a24-h2-size);
      letter-spacing: -0.0475em;
    }
  }

  /* Tablet: Slightly smaller */
  @media screen and (max-width: 1150px) and (min-width: 667px) {
    .product-information-a24 {
      font-size: 87.5%;
    }
  }

  /* Large Desktop: Scale up */
  @media screen and (min-width: 1550px) {
    .product-information-a24 {
      font-size: 110%;
    }
  }

  /* Extra Large: Scale up more */
  @media screen and (min-width: 2000px) {
    .product-information-a24 {
      font-size: 130%;
    }
  }

  /* ============================================
     A24 Selection Styling
     ============================================ */
  
  .product-information-a24 ::selection {
    background: var(--a24-color-divider);
    color: var(--a24-color-bg);
  }

  .product-information-a24 ::-moz-selection {
    background: var(--a24-color-divider);
    color: var(--a24-color-bg);
  }

{% endstylesheet %}
