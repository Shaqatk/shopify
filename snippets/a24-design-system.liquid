{% comment %}
  A24 Design System - Phase 1: Foundation
  
  Complete A24 visual design language including:
  - 4-column grid system with CSS variables
  - Typography: Zalando Sans (Google Fonts) with fallbacks
  - Spacing: Based on --space unit (0.625rem / 10px)
  - Color palette: Light grey background, black text
  - Minimal aesthetic with tight letter-spacing
  
  Reference: https://a24films.com/shop/
{% endcomment %}

{% stylesheet %}
  /* ============================================
     A24 DESIGN SYSTEM - PHASE 1 FOUNDATION
     ============================================ */
  
  /* --------------------------------------------
     1. CSS CUSTOM PROPERTIES (Design Tokens)
     -------------------------------------------- */
  
  :root {
    /* Scrollbar width detection (used for layout calculations) */
    --scrollbar-width: 0px;
  }
  
  .product-information-a24 {
    /* ==========================================
       A24 COLOR PALETTE
       ========================================== */
    --a24-color-bg: #f1f1f1;
    --a24-color-text: #000000;
    --a24-color-text-grey: #787878;
    --a24-color-text-light: #a8a8a8;
    --a24-color-member: #83887c;
    --a24-color-divider: #000000;
    --a24-color-divider-light: #a8a8a8;
    
    /* Semantic color aliases */
    --color-bg: var(--a24-color-bg);
    --color-text: var(--a24-color-text);
    
    /* ==========================================
       A24 GRID SYSTEM (4-Column)
       ========================================== */
    
    /* Base spacing unit: 10px */
    --space: 0.625rem;
    
    /* Column gutters - responsive */
    --col-gutter: 3vw;
    --col-gutter-outer-left: var(--col-gutter);
    --col-gutter-outer-right: var(--col-gutter);
    
    /* Window width minus scrollbar */
    --win-width: calc(100vw - var(--scrollbar-width));
    
    /* Column width calculation: (viewport - 2 gutters) / 4 columns */
    --col-width: calc((var(--win-width) - (2 * var(--col-gutter))) / 4);
    
    /* Product bar dimensions */
    --product-bar-vert-offset: calc(var(--space) * 3); /* 30px */
    --product-bar-inner-height: var(--cta-height, 60px);
    --product-bar-outer-height: calc(var(--product-bar-inner-height) + (var(--product-bar-vert-offset) * 2));
    --product-bar-bot-margin: calc(var(--space) * 4); /* 40px */
    
    /* CTA button height */
    --cta-height: 60px;
    
    /* ==========================================
       A24 SPACING SCALE
       ========================================== */
    --a24-space: var(--space);
    --a24-space-2: calc(var(--space) * 2);  /* 20px */
    --a24-space-3: calc(var(--space) * 3);  /* 30px */
    --a24-space-4: calc(var(--space) * 4);  /* 40px */
    --a24-space-5: calc(var(--space) * 5);  /* 50px */
    --a24-space-6: calc(var(--space) * 6);  /* 60px */
    --a24-space-8: calc(var(--space) * 8);  /* 80px */
    --a24-space-10: calc(var(--space) * 10); /* 100px */
    
    /* ==========================================
       A24 TYPOGRAPHY
       ========================================== */
    
    /* Font families - Zalando Sans (Google Fonts) */
    --a24-font-family: 'Zalando Sans', 'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    --a24-font-mono: 'SF Mono', 'Consolas', 'Courier New', monospace;
    
    /* Type scale */
    --a24-text-hero: 5.25rem;      /* 84px - Hero H1 */
    --a24-text-h1: 3.5rem;          /* 56px - Section titles */
    --a24-text-h2: 2.625rem;        /* 42px - Large headings */
    --a24-text-h3: 2.25rem;         /* 36px - Medium headings */
    --a24-text-h4: 1.6875rem;       /* 27px - CTA buttons, quantity */
    --a24-text-price: 2rem;         /* 32px - Price display */
    --a24-text-body: 1rem;          /* 16px - Body text */
    --a24-text-small: 0.875rem;     /* 14px - Small text */
    --a24-text-eyebrow: 0.6875rem;  /* 11px - Labels, eyebrows */
    
    /* Letter spacing */
    --a24-ls-hero: -0.055em;        /* Hero titles */
    --a24-ls-tight: -0.0375em;      /* Headings */
    --a24-ls-price: -0.1em;         /* Prices (monospace) */
    --a24-ls-body: -0.01em;         /* Body text */
    --a24-ls-cta: -0.025em;         /* CTA buttons */
    --a24-ls-wide: 0.02em;          /* Slight wide */
    --a24-ls-eyebrow: 0.04em;       /* Eyebrow/labels */
    
    /* Line heights */
    --a24-lh-hero: 0.87;            /* Hero titles */
    --a24-lh-tight: 0.95;           /* Headings */
    --a24-lh-snug: 1;               /* Single line elements */
    --a24-lh-body: 1.19;            /* Body text */
    --a24-lh-relaxed: 1.4;          /* Readable paragraphs */
    
    /* Font weights */
    --a24-weight-regular: 400;
    --a24-weight-medium: 500;
    --a24-weight-semibold: 600;
    --a24-weight-bold: 700;
    
    /* ==========================================
       BASE STYLES
       ========================================== */
    background-color: var(--a24-color-bg);
    color: var(--a24-color-text);
  }
  
  /* --------------------------------------------
     2. A24 GRID HELPER CLASSES
     -------------------------------------------- */
  
  /* Main grid container - flex-based like A24 */
  .a24-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-left: calc(var(--col-gutter-outer-left) + var(--col-gutter));
    padding-right: var(--col-gutter-outer-right);
  }
  
  /* Grid with items aligned to bottom */
  .a24-grid--align-end {
    align-items: flex-end;
  }
  
  /* Grid with items centered */
  .a24-grid--align-center {
    align-items: center;
  }
  
  /* Column sizing classes */
  .a24-col-1 { width: calc(1 * var(--col-width)); }
  .a24-col-2 { width: calc(2 * var(--col-width)); }
  .a24-col-3 { width: calc(3 * var(--col-width)); }
  .a24-col-4 { width: calc(4 * var(--col-width)); }
  
  /* Column with gutter */
  .a24-col-1-gutter { width: calc(1 * var(--col-width) - var(--col-gutter)); }
  .a24-col-2-gutter { width: calc(2 * var(--col-width) - var(--col-gutter)); }
  .a24-col-3-gutter { width: calc(3 * var(--col-width) - var(--col-gutter)); }
  
  /* Flex column that takes remaining space */
  .a24-col-flex {
    flex: 1 1 auto;
  }

  /* --------------------------------------------
     3. A24 TYPOGRAPHY STYLES
     -------------------------------------------- */
  
  /* Base font application - Zalando Sans variable font */
  .product-information-a24,
  .product-information-a24 * {
    font-family: var(--a24-font-family);
    font-optical-sizing: auto;
    font-variation-settings: "wdth" 100;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }
  
  /* Hero Title (H1) - Large product title in hero section */
  .product-information-a24 .a24-hero__title,
  .product-information-a24 h1.a24-title-hero {
    font-size: var(--a24-text-hero);
    font-weight: var(--a24-weight-bold);
    letter-spacing: var(--a24-ls-hero);
    line-height: var(--a24-lh-hero);
    margin: 0;
    color: var(--a24-color-text);
  }
  
  /* Standard H1 - Section headings */
  .product-information-a24__left h1,
  .product-information-a24__left .text--h1 {
    font-size: var(--a24-text-h2);
    font-weight: var(--a24-weight-bold);
    letter-spacing: var(--a24-ls-tight);
    line-height: var(--a24-lh-tight);
    margin: 0 0 var(--a24-space-2) 0;
    color: var(--a24-color-text);
  }
  
  /* Eyebrow / Label - Small uppercase text with border-top */
  .product-information-a24 .a24-eyebrow {
    display: block;
    font-size: var(--a24-text-eyebrow);
    font-weight: var(--a24-weight-semibold);
    letter-spacing: var(--a24-ls-eyebrow);
    line-height: var(--a24-lh-snug);
    text-transform: uppercase;
    color: var(--a24-color-text);
    padding-top: var(--a24-space);
    margin-bottom: var(--a24-space);
    border-top: 1px solid var(--a24-color-divider);
  }
  
  /* Eyebrow without border */
  .product-information-a24 .a24-eyebrow--no-border {
    border-top: none;
    padding-top: 0;
  }
  
  /* Legacy eyebrow support */
  .product-information-a24__left .eyebrow,
  .product-information-a24__left h6 {
    font-size: var(--a24-text-eyebrow);
    font-weight: var(--a24-weight-semibold);
    letter-spacing: var(--a24-ls-eyebrow);
    line-height: var(--a24-lh-snug);
    text-transform: uppercase;
    color: var(--a24-color-text);
    margin-bottom: var(--a24-space);
  }

  /* Price - Main price display */
  .product-information-a24 .a24-price {
    font-family: var(--a24-font-mono);
    font-size: var(--a24-text-price);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-price);
    line-height: var(--a24-lh-snug);
    color: var(--a24-color-text);
  }
  
  /* Member price - Subdued color */
  .product-information-a24 .a24-price--member {
    color: var(--a24-color-member);
  }
  
  /* Legacy price support */
  .product-information-a24__left .price,
  .product-information-a24 .price {
    font-size: var(--a24-text-body);
    font-weight: var(--a24-weight-medium);
    letter-spacing: var(--a24-ls-body);
    line-height: var(--a24-lh-snug);
    color: var(--a24-color-text);
  }

  /* Body Text / Description */
  .product-information-a24__left p,
  .product-information-a24__left .rte,
  .product-information-a24 .a24-body {
    font-size: var(--a24-text-body);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-body);
    line-height: var(--a24-lh-body);
    color: var(--a24-color-text);
    margin-bottom: 1.2em;
  }

  .product-information-a24__left p:last-child,
  .product-information-a24 .a24-body:last-child {
    margin-bottom: 0;
  }
  
  /* CTA / Button text */
  .product-information-a24 .a24-cta-text {
    font-size: var(--a24-text-h4);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-cta);
    line-height: var(--a24-lh-snug);
    text-transform: none;
  }
  
  /* Quantity selector numbers */
  .product-information-a24 .a24-quantity-text {
    font-size: var(--a24-text-h4);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-cta);
    line-height: var(--a24-lh-snug);
  }
  
  /* Small text / captions */
  .product-information-a24 .a24-text-small {
    font-size: var(--a24-text-small);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-body);
    line-height: var(--a24-lh-body);
  }
  
  /* Grey text modifier */
  .product-information-a24 .a24-text-grey {
    color: var(--a24-color-text-grey);
  }
  
  /* Light grey text modifier */
  .product-information-a24 .a24-text-light {
    color: var(--a24-color-text-light);
  }

  /* Variant Options */
  .product-information-a24 .variant-picker label,
  .product-information-a24 .variant-picker .variant-option {
    font-size: var(--a24-text-small);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-wide);
    text-transform: uppercase;
    color: var(--a24-color-text);
  }

  /* --------------------------------------------
     4. A24 SPACING & LAYOUT UTILITIES
     -------------------------------------------- */
  
  /* Spacing utility classes */
  .a24-mt-1 { margin-top: var(--a24-space); }
  .a24-mt-2 { margin-top: var(--a24-space-2); }
  .a24-mt-3 { margin-top: var(--a24-space-3); }
  .a24-mt-4 { margin-top: var(--a24-space-4); }
  .a24-mb-1 { margin-bottom: var(--a24-space); }
  .a24-mb-2 { margin-bottom: var(--a24-space-2); }
  .a24-mb-3 { margin-bottom: var(--a24-space-3); }
  .a24-mb-4 { margin-bottom: var(--a24-space-4); }
  
  /* Padding utility classes */
  .a24-pt-1 { padding-top: var(--a24-space); }
  .a24-pt-2 { padding-top: var(--a24-space-2); }
  .a24-pt-3 { padding-top: var(--a24-space-3); }
  .a24-pt-4 { padding-top: var(--a24-space-4); }
  .a24-pb-1 { padding-bottom: var(--a24-space); }
  .a24-pb-2 { padding-bottom: var(--a24-space-2); }
  .a24-pb-3 { padding-bottom: var(--a24-space-3); }
  .a24-pb-4 { padding-bottom: var(--a24-space-4); }
  
  /* Gap utility for flex/grid containers */
  .a24-gap-1 { gap: var(--a24-space); }
  .a24-gap-2 { gap: var(--a24-space-2); }
  .a24-gap-3 { gap: var(--a24-space-3); }
  .a24-gap-4 { gap: var(--a24-space-4); }
  
  /* Tighter spacing between elements */
  .product-information-a24__left .group-block {
    gap: var(--a24-space-2);
  }

  .product-information-a24__left .variant-picker {
    margin-top: var(--a24-space-3);
    margin-bottom: var(--a24-space-3);
  }

  .product-information-a24__left ._divider {
    margin: var(--a24-space-4) 0;
    opacity: 0.3;
  }

  /* --------------------------------------------
     5. A24 BUTTONS & INTERACTIVE ELEMENTS
     -------------------------------------------- */
  
  /* A24 CTA Button - Primary style (outlined, becomes filled on scroll) */
  .product-information-a24 .a24-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--a24-font-family);
    font-size: var(--a24-text-h4);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-cta);
    text-transform: none;
    background-color: transparent;
    color: var(--a24-color-text);
    border: 1px solid var(--a24-color-text);
    border-radius: 0;
    padding: calc(var(--a24-space) * 2.8) calc(var(--a24-space) * 7.2);
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    white-space: nowrap;
    min-height: var(--cta-height);
  }
  
  .product-information-a24 .a24-cta:hover:not(:disabled) {
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
  }
  
  /* A24 CTA - Filled/Dark state (used when pinned) */
  .product-information-a24 .a24-cta--filled {
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
  }
  
  .product-information-a24 .a24-cta--filled:hover:not(:disabled) {
    background-color: #333333;
    border-color: #333333;
  }
  
  /* A24 CTA - Disabled state */
  .product-information-a24 .a24-cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    border-color: var(--a24-color-text-light);
    color: var(--a24-color-text-light);
  }
  
  /* Legacy button support */
  .product-information-a24 button,
  .product-information-a24 .button {
    font-family: var(--a24-font-family);
    font-size: var(--a24-text-small);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-wide);
    text-transform: uppercase;
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
    border: 1px solid var(--a24-color-text);
    border-radius: 0;
    padding: var(--a24-space-2) var(--a24-space-3);
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .product-information-a24 button:hover,
  .product-information-a24 .button:hover {
    background-color: var(--a24-color-text-grey);
    border-color: var(--a24-color-text-grey);
    color: var(--a24-color-bg);
  }

  /* Secondary buttons */
  .product-information-a24 .button--secondary {
    background-color: transparent;
    color: var(--a24-color-text);
    border: 1px solid var(--a24-color-divider-light);
  }

  .product-information-a24 .button--secondary:hover {
    background-color: var(--a24-color-text);
    color: var(--a24-color-bg);
    border-color: var(--a24-color-text);
  }
  
  /* Quantity selector styling */
  .product-information-a24 .a24-quantity-selector {
    display: flex;
    align-items: center;
    gap: calc(var(--a24-space) * 1.5);
  }
  
  .product-information-a24 .a24-quantity-option {
    font-size: var(--a24-text-h4);
    font-weight: var(--a24-weight-regular);
    letter-spacing: var(--a24-ls-cta);
    color: var(--a24-color-text-light);
    cursor: pointer;
    padding: var(--a24-space) calc(var(--a24-space) * 0.5);
    transition: color 0.2s ease;
    background: none;
    border: none;
  }
  
  .product-information-a24 .a24-quantity-option:hover {
    color: var(--a24-color-text-grey);
  }
  
  .product-information-a24 .a24-quantity-option.is-active {
    color: var(--a24-color-text);
  }

  /* --------------------------------------------
     7. A24 SCROLLBAR STYLING
     -------------------------------------------- */
  
  .product-information-a24__left {
    scrollbar-color: var(--a24-color-divider-light) var(--a24-color-bg);
    scrollbar-width: thin;
  }

  .product-information-a24__left::-webkit-scrollbar {
    width: 9px;
  }

  .product-information-a24__left::-webkit-scrollbar-track {
    background: var(--a24-color-bg);
  }

  .product-information-a24__left::-webkit-scrollbar-thumb {
    background: var(--a24-color-divider-light);
    border: 2px solid var(--a24-color-bg);
    border-radius: 9px;
  }

  .product-information-a24__left::-webkit-scrollbar-thumb:hover {
    background: var(--a24-color-text-grey);
  }

  /* --------------------------------------------
     8. A24 DIVIDERS & BORDERS
     -------------------------------------------- */
  
  .product-information-a24 .a24-divider {
    width: 100%;
    height: 1px;
    background-color: var(--a24-color-divider);
    margin: var(--a24-space-4) 0;
  }
  
  .product-information-a24 .a24-divider--light {
    background-color: var(--a24-color-divider-light);
  }
  
  .product-information-a24 .a24-border-top {
    border-top: 1px solid var(--a24-color-divider);
  }
  
  .product-information-a24 .a24-border-bottom {
    border-bottom: 1px solid var(--a24-color-divider);
  }

  /* --------------------------------------------
     9. A24 PURCHASE BAR BASE STYLES
     -------------------------------------------- */
  
  .product-information-a24__purchase-bar {
    background-color: var(--a24-color-bg);
    border: 1px solid var(--a24-color-divider-light);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
  }
  
  /* Product bar CSS custom properties */
  .product-information-a24 .a24-product-bar {
    --bar-bg-default: var(--a24-color-bg);
    --bar-bg-pinned: transparent;
    --bar-border-color: var(--a24-color-divider);
  }

  /* --------------------------------------------
     6. RESPONSIVE BREAKPOINTS & SCALING
     -------------------------------------------- */
  
  /* 
   * A24 Breakpoints:
   * - Desktop: min-width: 1151px (full 4-column layout)
   * - Tablet: 667px - 1150px (3-column, quantity hidden)
   * - Mobile: max-width: 666px (single column, bottom sticky)
   */
  
  /* MOBILE: max-width 666px */
  @media screen and (max-width: 666px) {
    .product-information-a24 {
      /* Adjusted grid for mobile */
      --col-gutter: 16px;
      --col-width: calc((100vw - 32px) / 2);
      
      /* Scaled typography */
      --a24-text-hero: 2.5rem;        /* 40px */
      --a24-text-h1: 2rem;            /* 32px */
      --a24-text-h2: 1.75rem;         /* 28px */
      --a24-text-h3: 1.5rem;          /* 24px */
      --a24-text-h4: 1.25rem;         /* 20px */
      --a24-text-price: 1.5rem;       /* 24px */
    }

    .product-information-a24__left h1,
    .product-information-a24__left .text--h1 {
      font-size: var(--a24-text-h2);
      letter-spacing: -0.0475em;
    }
    
    /* Hide desktop-only grid classes */
    .a24-hide-mobile {
      display: none !important;
    }
  }
  
  /* Show mobile-only elements on mobile */
  @media screen and (min-width: 667px) {
    .a24-show-mobile-only {
      display: none !important;
    }
  }

  /* TABLET: 667px - 1150px */
  @media screen and (min-width: 667px) and (max-width: 1150px) {
    .product-information-a24 {
      /* Adjusted grid for tablet */
      --col-gutter: 2.5vw;
      --col-width: calc((100vw - (3 * var(--col-gutter))) / 3);
      
      /* Slightly smaller type */
      --a24-text-hero: 4rem;          /* 64px */
      --a24-text-h1: 3rem;            /* 48px */
      --a24-text-h2: 2.25rem;         /* 36px */
      --a24-text-h4: 1.5rem;          /* 24px */
    }
    
    /* Hide tablet-hidden elements */
    .a24-hide-tablet {
      display: none !important;
    }
  }

  /* LARGE DESKTOP: min-width 1550px */
  @media screen and (min-width: 1550px) {
    .product-information-a24 {
      /* Larger type for big screens */
      --a24-text-hero: 6rem;          /* 96px */
      --a24-text-h1: 4rem;            /* 64px */
      --a24-text-price: 2.25rem;      /* 36px */
    }
  }

  /* EXTRA LARGE: min-width 2000px */
  @media screen and (min-width: 2000px) {
    .product-information-a24 {
      --a24-text-hero: 7rem;          /* 112px */
      --a24-text-h1: 4.5rem;          /* 72px */
      --a24-text-price: 2.5rem;       /* 40px */
      --col-gutter: 4vw;
    }
  }

  /* --------------------------------------------
     10. A24 SELECTION & FOCUS STYLING
     -------------------------------------------- */
  
  .product-information-a24 ::selection {
    background: var(--a24-color-text);
    color: var(--a24-color-bg);
  }

  .product-information-a24 ::-moz-selection {
    background: var(--a24-color-text);
    color: var(--a24-color-bg);
  }
  
  /* Focus styles for accessibility */
  .product-information-a24 *:focus-visible {
    outline: 2px solid var(--a24-color-text);
