{% comment %}
  Product Information A24
  
  A24-style minimal PDP with:
  - Full-viewport hero section (Phase 2)
  - 2-column grid: sticky info (1/4) + media (3/4) (Phase 3)
  - Sticky purchase bar with quantity selector (Phase 4)
  - Stacked media gallery (Phase 5)
{% endcomment %}

{%- render 'a24-design-system' -%}

<script type="application/ld+json">
  {{ closest.product | structured_data }}
</script>

{% liquid
  # Get product and variant
  assign product = closest.product
  assign current_variant = product.selected_or_first_available_variant
  assign initial_quantity = current_variant.quantity_rule.min | default: 1

  # Check if product has media
  assign product_has_media = true
  if product.media.size == 0
    assign product_has_media = false
  endif
  
  # Check if product has variants
  assign has_variants = false
  if product.variants.size > 1
    assign has_variants = true
  endif
%}

<div
  class="product-information-a24 section section--full-width spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
  data-testid="product-information-a24"
  data-product-id="{{ product.id }}"
>
  {%- comment -%} ========================================
      HERO SECTION - Full viewport (Phase 2)
      ======================================== {%- endcomment -%}
  {% render 'a24-product-hero', product: product %}
  
  {%- comment -%} ========================================
      MAIN GRID - 1/4 Info + 3/4 Media (Phase 3)
      ======================================== {%- endcomment -%}
  <div class="a24-product-grid">
    
    {%- comment -%} LEFT COLUMN: Sticky Info (1/4 width) {%- endcomment -%}
    <div class="a24-product-grid__info">
      <div class="a24-product-grid__info-sticky">
        
        {%- comment -%} DESCRIPTION BLOCK {%- endcomment -%}
        {% if product.description != blank %}
          <div class="a24-info-block">
            {% render 'a24-eyebrow', text: 'Description' %}
            <div class="a24-info-block__content a24-body">
              {{ product.description }}
            </div>
          </div>
        {% endif %}
        
        {%- comment -%} VARIANT PICKER (if product has variants) {%- endcomment -%}
        {% if has_variants %}
          <div class="a24-info-block a24-info-block--variants">
            {% render 'a24-eyebrow', text: 'Options' %}
            <div class="a24-info-block__content">
              {% for option in product.options_with_values %}
                <div class="a24-variant-option">
                  <div class="a24-variant-option__name a24-text-small">{{ option.name }}</div>
                  <div class="a24-variant-option__values">
                    {% for value in option.values %}
                      <button 
                        type="button"
                        class="a24-variant-option__value {% if option.selected_value == value %}is-active{% endif %}"
                        data-option-name="{{ option.name }}"
                        data-option-value="{{ value }}"
                      >
                        {{ value }}
                      </button>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        
        {%- comment -%} MORE INFO BLOCK (from metafields or hardcoded) {%- endcomment -%}
        {% assign more_info = product.metafields.custom.more_info %}
        {% if more_info != blank %}
          <div class="a24-info-block">
            {% render 'a24-eyebrow', text: 'More Info' %}
            <div class="a24-info-block__content a24-body">
              {{ more_info }}
            </div>
          </div>
        {% else %}
          {%- comment -%} Default More Info content {%- endcomment -%}
          <div class="a24-info-block">
            {% render 'a24-eyebrow', text: 'Details' %}
            <div class="a24-info-block__content a24-body a24-text-grey">
              {% if product.vendor != blank %}
                <p><strong>Vendor:</strong> {{ product.vendor }}</p>
              {% endif %}
              {% if product.type != blank %}
                <p><strong>Type:</strong> {{ product.type }}</p>
              {% endif %}
              {% if current_variant.sku != blank %}
                <p><strong>SKU:</strong> {{ current_variant.sku }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
        
      </div>
    </div>
    
    {%- comment -%} RIGHT COLUMN: Media + Purchase Bar (3/4 width) {%- endcomment -%}
    <div class="a24-product-grid__media">
      
      {%- comment -%} PRODUCT BAR - Sticky at top (Phase 4) {%- endcomment -%}
      {% render 'a24-purchase-bar', product: product, section: section %}
      
      {%- comment -%} MEDIA GALLERY - Stacked images (Phase 5 will enhance) {%- endcomment -%}
      {% if product_has_media %}
        <div class="a24-media-gallery">
          {% for media in product.media offset: 1 %}
            <div class="a24-media-item" data-media-id="{{ media.id }}">
              {% if media.media_type == 'image' %}
                <img
                  src="{{ media | image_url: width: 1200 }}"
                  srcset="{{ media | image_url: width: 600 }} 600w,
                          {{ media | image_url: width: 900 }} 900w,
                          {{ media | image_url: width: 1200 }} 1200w,
                          {{ media | image_url: width: 1800 }} 1800w,
                          {{ media | image_url: width: 2400 }} 2400w"
                  sizes="(max-width: 666px) 100vw, 75vw"
                  alt="{{ media.alt | default: product.title | escape }}"
                  width="{{ media.width }}"
                  height="{{ media.height }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  class="a24-media-item__image"
                >
              {% elsif media.media_type == 'video' %}
                <div class="a24-media-item__video">
                  {{ media | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true }}
                </div>
              {% elsif media.media_type == 'external_video' %}
                <div class="a24-media-item__video">
                  {{ media | external_video_tag }}
                </div>
              {% elsif media.media_type == 'model' %}
                <div class="a24-media-item__model">
                  {{ media | model_viewer_tag }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
      
    </div>
    
  </div>
  
</div>

<script src="{{ 'a24-product.js' | asset_url }}" defer></script>

{% stylesheet %}
  /* ============================================
     A24 PDP - PHASE 3: Product Grid Layout
     ============================================ */
  
  .product-information-a24 {
    background-color: #f1f1f1 !important;
    color: var(--a24-color-text, #000000);
  }
  
  /* Force grey background on all child elements */
  .product-information-a24 *,
  .a24-hero,
  .a24-product-grid,
  .a24-product-grid__info,
  .a24-product-grid__media,
  .a24-product-bar,
  .a24-media-gallery {
    background-color: transparent;
  }
  
  /* Ensure the section wrapper has grey background */
  .section-product-information-a24 {
    background-color: #f1f1f1 !important;
  }
  
  /* ============================================
     QUANTITY SELECTOR - HORIZONTAL LAYOUT
     ============================================ */
  
  .product-information-a24 .a24-quantity-selector,
  .a24-product-bar .a24-quantity-selector,
  .a24-product-bar .a24-selector__numbers,
  .a24-quantity-selector {
    display: flex !important;
    flex-direction: row !important;
    flex-wrap: wrap !important;
    align-items: center !important;
    gap: 0 !important;
    width: 100%;
  }
  
  .a24-product-bar .a24-selector {
    width: 100%;
  }
  
  .product-information-a24 .a24-qty-num,
  .a24-product-bar .a24-qty-num,
  .a24-quantity-selector .a24-qty-num,
  .a24-qty-num {
    display: inline !important;
    float: none !important;
    font-family: var(--a24-font-family, 'Zalando Sans', sans-serif) !important;
    font-size: 1.6875rem !important;
    font-weight: 700 !important;
    letter-spacing: -0.025em !important;
    line-height: 1 !important;
    color: #a8a8a8 !important;
    cursor: pointer !important;
    margin-right: 0.5em !important;
    margin-bottom: 0 !important;
    padding: 0 !important;
    background: none !important;
    border: none !important;
    box-shadow: none !important;
    outline: none !important;
    transition: color 0.2s ease !important;
    -webkit-appearance: none !important;
    appearance: none !important;
  }
  
  .product-information-a24 .a24-qty-num:last-child,
  .a24-quantity-selector .a24-qty-num:last-child,
  .a24-qty-num:last-child {
    margin-right: 0 !important;
  }
  
  .product-information-a24 .a24-qty-num:hover,
  .a24-quantity-selector .a24-qty-num:hover,
  .a24-qty-num:hover {
    color: #000000 !important;
    background: none !important;
  }
  
  .product-information-a24 .a24-qty-num.is-active,
  .a24-quantity-selector .a24-qty-num.is-active,
  .a24-qty-num.is-active {
    color: #000000 !important;
  }
  
  /* ============================================
     MAIN GRID: 1/4 Info + 3/4 Media
     ============================================ */
  
  .a24-product-grid {
    display: grid;
    grid-template-columns: calc(1 * var(--col-width, 25vw)) calc(3 * var(--col-width, 75vw));
    gap: var(--col-gutter, 3vw);
    padding-left: var(--col-gutter, 3vw);
    padding-right: var(--col-gutter, 3vw);
    min-height: 100vh;
    background-color: #f1f1f1;
  }
  
  /* ============================================
     LEFT COLUMN: Sticky Info
     ============================================ */
  
  .a24-product-grid__info {
    position: relative;
  }
  
  .a24-product-grid__info-sticky {
    position: sticky;
    top: calc(var(--header-height, 0px) + 40px);
    max-height: calc(100vh - var(--header-height, 0px) - 80px);
    overflow-y: auto;
    padding-bottom: 40px;
    
    /* Custom scrollbar */
    scrollbar-width: thin;
    scrollbar-color: var(--a24-color-divider-light, #a8a8a8) transparent;
  }
  
  .a24-product-grid__info-sticky::-webkit-scrollbar {
    width: 4px;
  }
  
  .a24-product-grid__info-sticky::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .a24-product-grid__info-sticky::-webkit-scrollbar-thumb {
    background: var(--a24-color-divider-light, #a8a8a8);
    border-radius: 2px;
  }
  
  /* ============================================
     INFO BLOCKS (Description, More Info, etc.)
     ============================================ */
  
  .a24-info-block {
    margin-bottom: calc(var(--a24-space, 10px) * 4);
  }
  
  .a24-info-block:last-child {
    margin-bottom: 0;
  }
  
  .a24-info-block__content {
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: -0.01em;
    line-height: 1.19;
  }
  
  .a24-info-block__content p {
    margin: 0 0 1em 0;
  }
  
  .a24-info-block__content p:last-child {
    margin-bottom: 0;
  }
  
  /* Variant Options */
  .a24-variant-option {
    margin-bottom: calc(var(--a24-space, 10px) * 2);
  }
  
  .a24-variant-option__name {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: var(--a24-color-text-grey, #787878);
    margin-bottom: calc(var(--a24-space, 10px) * 0.5);
  }
  
  .a24-variant-option__values {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--a24-space, 10px) * 0.5);
  }
  
  .a24-variant-option__value {
    font-family: var(--a24-font-family, 'Zalando Sans', sans-serif);
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: -0.01em;
    padding: 8px 16px;
    background: none;
    border: 1px solid var(--a24-color-divider-light, #a8a8a8);
    color: var(--a24-color-text, #000000);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .a24-variant-option__value:hover {
    border-color: var(--a24-color-text, #000000);
  }
  
  .a24-variant-option__value.is-active {
    background: var(--a24-color-text, #000000);
    color: var(--a24-color-bg, #f1f1f1);
    border-color: var(--a24-color-text, #000000);
  }
  
  /* ============================================
     RIGHT COLUMN: Media
     ============================================ */
  
  .a24-product-grid__media {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  /* ============================================
     PRODUCT BAR (Sticky)
     ============================================ */
  
  .a24-product-bar {
    position: sticky;
    top: -1px;
    z-index: 100;
    background: var(--a24-color-bg, #f1f1f1);
    padding: calc(var(--a24-space, 10px) * 3) 0;
    margin-bottom: calc(var(--a24-space, 10px) * 4);
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease, background-color 0.3s ease;
  }
  
  .a24-product-bar__form {
    width: 100%;
  }
  
  .a24-product-bar__inner {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: calc(var(--a24-space, 10px) * 4);
  }
  
  .a24-product-bar__quantity {
    flex: 1 1 auto;
    max-width: calc(1 * var(--col-width, 25vw));
  }
  
  .a24-product-bar__cta-wrap {
    flex: 0 0 auto;
  }
  
  /* Add to Cart Button */
  .a24-product-bar__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--a24-font-family, 'Zalando Sans', sans-serif);
    font-size: 0.8125rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    padding: 28px 72px;
    background: transparent;
    color: var(--a24-color-text, #000000);
    border: 1px solid var(--a24-color-text, #000000);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }
  
  .a24-product-bar__cta:hover:not(:disabled) {
    background: var(--a24-color-text, #000000);
    color: var(--a24-color-bg, #f1f1f1);
  }
  
  .a24-product-bar__cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    border-color: var(--a24-color-text-light, #a8a8a8);
    color: var(--a24-color-text-light, #a8a8a8);
  }
  
  /* Pinned State */
  .a24-product-bar.state-pinned {
    background: transparent;
    border-bottom-color: var(--a24-color-divider, #000000);
  }
  
  .a24-product-bar.state-pinned .a24-product-bar__quantity {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }
  
  .a24-product-bar.state-pinned .a24-product-bar__cta {
    background: var(--a24-color-text, #000000);
    color: var(--a24-color-bg, #f1f1f1);
  }
  
  .a24-product-bar.state-pinned .a24-product-bar__cta:hover:not(:disabled) {
    background: #333333;
    border-color: #333333;
  }
  
  /* ============================================
     MEDIA GALLERY
     ============================================ */
  
  .a24-media-gallery {
    display: flex;
    flex-direction: column;
    gap: calc(var(--a24-space, 10px) * 4);
  }
  
  .a24-media-item {
    width: 100%;
  }
  
  .a24-media-item__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }
  
  .a24-media-item__video video,
  .a24-media-item__video iframe {
    width: 100%;
    height: auto;
    display: block;
  }
  
  /* ============================================
     RESPONSIVE - TABLET (667px - 1150px)
     ============================================ */
  
  @media screen and (min-width: 667px) and (max-width: 1150px) {
    .a24-product-grid {
      grid-template-columns: calc(1.5 * var(--col-width, 25vw)) calc(2.5 * var(--col-width, 75vw));
    }
    
    .a24-product-bar__cta {
      padding: 24px 48px;
    }
    
    /* Hide quantity on tablet when pinned */
    .a24-product-bar.state-pinned .a24-product-bar__quantity {
      display: none;
    }
  }
  
  /* ============================================
     RESPONSIVE - MOBILE (max-width: 666px)
     ============================================ */
  
  @media screen and (max-width: 666px) {
    .a24-product-grid {
      display: flex;
      flex-direction: column;
      gap: calc(var(--a24-space, 10px) * 3);
      padding: 0 16px calc(var(--a24-space, 10px) * 16);
    }
    
    /* Info column - not sticky on mobile */
    .a24-product-grid__info {
      order: 2;
    }
    
    .a24-product-grid__info-sticky {
      position: static;
      max-height: none;
      overflow: visible;
    }
    
    /* Media column first on mobile */
    .a24-product-grid__media {
      order: 1;
    }
    
    /* Product bar - fixed at bottom */
    .a24-product-bar {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      top: auto;
      z-index: 1000;
      background: var(--a24-color-bg, #f1f1f1);
      border-top: 1px solid var(--a24-color-divider-light, #a8a8a8);
      box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
      padding: 16px;
      margin: 0;
    }
    
    .a24-product-bar__inner {
      flex-direction: column;
      gap: 16px;
      align-items: stretch;
    }
    
    .a24-product-bar__quantity {
      max-width: 100%;
    }
    
    .a24-product-bar__cta {
      width: 100%;
      padding: 20px 24px;
    }
    
    /* No pinned state on mobile */
    .a24-product-bar.state-pinned {
      background: var(--a24-color-bg, #f1f1f1);
      border-bottom: none;
    }
    
    .a24-product-bar.state-pinned .a24-product-bar__quantity {
      opacity: 1;
      pointer-events: auto;
    }
    
    .a24-product-bar.state-pinned .a24-product-bar__cta {
      background: transparent;
      color: var(--a24-color-text, #000000);
    }
    
    /* Media gallery smaller gap on mobile */
    .a24-media-gallery {
      gap: calc(var(--a24-space, 10px) * 2);
    }
  }
  
  /* ============================================
     LARGE DESKTOP (1400px+)
     ============================================ */
  
  @media screen and (min-width: 1400px) {
    .a24-product-grid {
      padding-left: calc(var(--col-gutter, 3vw) * 1.5);
      padding-right: calc(var(--col-gutter, 3vw) * 1.5);
    }
    
    .a24-product-bar__cta {
      padding: 32px 96px;
    }
  }
  
  /* ============================================
     FORCE GREY BACKGROUND ON ENTIRE PAGE
     ============================================ */
  
  /* Target the main content area */
  body:has(.product-information-a24) {
    background-color: #f1f1f1 !important;
  }
  
  body:has(.product-information-a24) .content-for-layout,
  body:has(.product-information-a24) #MainContent {
    background-color: #f1f1f1 !important;
  }
  
{% endstylesheet %}

{% schema %}
{
  "name": "Product Information A24",
  "class": "section-product-information-a24",
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "content-center-aligned",
          "label": "t:options.page"
        },
        {
          "value": "content-full-width",
          "label": "t:options.full"
        }
      ],
      "default": "content-full-width"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}
